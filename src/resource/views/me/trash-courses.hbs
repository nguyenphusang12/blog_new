<form method="POST" action="/course/handleFormsAction" class="container">
    <div class="mt-4">
        <a href="/me/stored/courses">Quay lại</a>
        <div class="h3">
            Thùng rác
        </div>
        <div class="d-flex align-items-center">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" value="" id="checkAll">
                <label class="form-check-label" for="checkAll" 
                    style="webkit-user-select: none;-moz-user-select: none;user-select: none;">
                    Chọn tất cả
                </label>
            </div>
            <select class="form-select form-select-action" name="action" aria-label="Default select example" required>
                <option value="">--Hành động--</option>
                <option value="restore">Khôi phục</option>
                <option value="deletePermanently">Xóa vĩnh viễn</option>
            </select>
            <button type="submit" class="btn btn-primary disabled btn-action">Action</button>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">STT</th>
                    <th scope="col">Tên khóa học</th>
                    <th scope="col" colspan = 4>Thời gian xóa</th>
                </tr>
            </thead>
            <tbody>
                {{#each course}}
                    <tr>
                        <td>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="courseIds[]" value="{{this._id}}" id="flexCheckDefault">
                            </div>
                        </td>
                        <th scope="row">{{sum @index 1}}</th>
                        <td>{{this.name}}</td>
                        <td>{{this.deletedAt}}</td>
                        <td><a href="/course/{{this._id}}/edit" data-id="{{this._id}}" class="btn-restore btn btn-light">Khôi phục</a></td>
                        <td><a href="" class="btn btn-light" data-id="{{this._id}}" data-toggle="modal"  data-target="#delete-course">Xóa vĩnh viễn</a></td>
                    </tr>
                {{else}}
                    <tr>
                        <th colspan="5" class="text-center">
                            Thùng rác trống
                            <a href="/me/stored/courses">Danh sách khóa học</a>
                        </th>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</form>


<!-- Modal -->
<div class="modal fade" id="delete-course" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Xóa khóa học ?</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
          Hành động này không thể khôi phục. Bạn có chắc chắn muốn xóa vĩnh viễn ?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
        <button id="btn-delete" type="button" class="btn btn-danger">Xóa vĩnh viễn</button>
      </div>
    </div>
  </div>
</div>
<form method="POST" name="delete-course-form" ></form>
<form method="POST" name="restore-course-form" ></form>
<script>
    document.addEventListener("DOMContentLoaded",function(){
        var courseId;
        var formDelete = document.forms['delete-course-form'];
        var btnDeleteCourse = document.getElementById('btn-delete');
        var formRestore = document.forms['restore-course-form'];
        var btnRestore = $('.btn-restore');

        var checkItemCourseBtn = $('input[name="courseIds[]"]');
        var checkAllBtn = $('#checkAll');
        var btnAction = $('.btn-action');
        function renderStatusAction(){
            if ($('input[name="courseIds[]"]:checked').length > 0){
                btnAction.removeClass('disabled');
            } else {
                btnAction.addClass('disabled');
            }
        }

        $('#delete-course').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget) 
            courseId = button.data('id') 
        })
        btnDeleteCourse.onclick = function () {
            formDelete.action = "/course/" + courseId +"/force" + "?_method=DELETE";
            formDelete.submit()
        }
        btnRestore.click(function(e){
            e.preventDefault()
            courseId = $(this).data('id');
            formDelete.action = "/course/" + courseId + "/restore" + "?_method=PATCH";
            formDelete.submit()
        })

        checkAllBtn.change(function(){
            checkItemCourseBtn.prop('checked',checkAllBtn.prop('checked'))
            renderStatusAction();
        });
        checkItemCourseBtn.change(function(){
            var isCheckAll =  checkItemCourseBtn.length === $('input[name="courseIds[]"]:checked').length;
            checkAllBtn.prop('checked',isCheckAll);
            renderStatusAction();
        });
    })
</script>
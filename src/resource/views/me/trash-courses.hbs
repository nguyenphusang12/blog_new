<div class="container">
    <div class="mt-4">
        <a href="/me/stored/courses">Quay lại</a>
        <div class="h3">
            Thùng rác
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">STT</th>
                    <th scope="col">Tên khóa học</th>
                    <th scope="col" colspan = 4>Thời gian xóa</th>
                </tr>
            </thead>
            <tbody>
                {{#each course}}
                    <tr>
                        <th scope="row">{{sum @index 1}}</th>
                        <td>{{this.name}}</td>
                        <td>{{this.deletedAt}}</td>
                        <td><a href="/course/{{this._id}}/edit" data-id="{{this._id}}" class="btn-restore btn btn-light">Khôi phục</a></td>
                        <td><a href="" class="btn btn-light" data-id="{{this._id}}" data-toggle="modal"  data-target="#delete-course">Xóa vĩnh viễn</a></td>
                    </tr>
                {{else}}
                    <tr>
                        <th colspan="5" class="text-center">
                            Thùng rác trống
                            <a href="/me/stored/courses">Danh sách khóa học</a>
                        </th>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>


<!-- Modal -->
<div class="modal fade" id="delete-course" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Xóa khóa học ?</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
          Hành động này không thể khôi phục. Bạn có chắc chắn muốn xóa vĩnh viễn ?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
        <button id="btn-delete" type="button" class="btn btn-danger">Xóa vĩnh viễn</button>
      </div>
    </div>
  </div>
</div>
<form method="POST" name="delete-course-form" ></form>
<form method="POST" name="restore-course-form" ></form>
<script>
    document.addEventListener("DOMContentLoaded",function(){
        var courseId;
        var formDelete = document.forms['delete-course-form'];
        var btnDeleteCourse = document.getElementById('btn-delete');

        var formRestore = document.forms['restore-course-form'];
        var btnRestore = $('.btn-restore');

        $('#delete-course').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget) 
            courseId = button.data('id') 
        })
        btnDeleteCourse.onclick = function () {
            formDelete.action = "/course/" + courseId +"/force" + "?_method=DELETE";
            formDelete.submit()
        }

        btnRestore.click(function(e){
            e.preventDefault()
            courseId = $(this).data('id');
            formDelete.action = "/course/" + courseId + "/restore" + "?_method=PATCH";
            formDelete.submit()
        })
    })
</script>